

TESTING
bsub -I -R "rusage[mem=32000, ngpus_excl_p=1]" \
  fairseq-train --task language_modeling \
  data-bin/wikitext-103 \
  --save-dir /cluster/scratch//jaswei/checkpoints-lm/testing_allmax01 \
  --jason-log-dir jason-lm-logs/testing_allmax01 \
  --arch transformer_lm --share-decoder-input-output-embed \
  --dropout 0.1 \
  --optimizer adam --adam-betas '(0.9, 0.98)' --weight-decay 0.01 --clip-norm 0.0 \
  --lr 0.0005 --lr-scheduler inverse_sqrt --warmup-updates 4000 --warmup-init-lr 1e-07 \
  --tokens-per-sample 8 --sample-break-mode none \
  --max-tokens 512 --update-freq 2 \
  --max-update 200000 \
  --fp16 \
  --no-epoch-checkpoints --no-last-checkpoints \
  --criterion reg_allmax_cross_entropy --beta-coefficient 0.1 \

